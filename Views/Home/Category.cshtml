@{
    ViewData["Title"] = "Fin Tracer - Compare Files";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Financial Curve Analysis</h1>
        <select id="category-select" class="form-select w-auto">
            <option value="Up">Up</option>
            <option value="Down">Down</option>
            <option value="CRA">CRA</option>
            <option value="Delta Ladders">Delta Ladders</option>
            <option value="IFRS17">IFRS17</option>
            <option value="Aegon">Aegon</option>
            <option value="ASR">ASR</option>
            <option value="Flattener">Flattener</option>
            <option value="Steepener">Steepener</option>
        </select>
    </div>

    <!-- Summary Metrics -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title">Summary Metrics</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>RMSE</th>
                        <th>MAD</th>
                        <th>Area</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Up</td>
                        <td>0.12</td>
                        <td>0.1</td>
                        <td>2.5</td>
                    </tr>
                    <tr>
                        <td>Down</td>
                        <td>0.15</td>
                        <td>0.12</td>
                        <td>2.8</td>
                    </tr>
                    <tr>
                        <td>CRA</td>
                        <td>0.05</td>
                        <td>0.04</td>
                        <td>1.2</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Curve Visualization -->
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title">Curve Visualization (<span id="selected-category">Up</span>)</h5>
        </div>
        <div class="card-body">
            <div id="curve-chart" style="height: 300px;">
                <!-- Chart placeholder -->
                <p class="text-muted">Chart will be rendered here.</p>
            </div>
        </div>
    </div>

    <!-- Tabs for Detailed Analysis -->
    <ul class="nav nav-tabs mb-4" id="analysisTabs" role="tablist">
        <li class="nav-item">
            <button class="nav-link active" id="cluster-tab" data-bs-toggle="tab" data-bs-target="#cluster" type="button" role="tab">Cluster Analysis</button>
        </li>
        <li class="nav-item">
            <button class="nav-link" id="outlier-tab" data-bs-toggle="tab" data-bs-target="#outlier" type="button" role="tab">Outlier Detection</button>
        </li>
    </ul>
    <div class="tab-content" id="analysisTabsContent">
        <div class="tab-pane fade show active" id="cluster" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Cluster Insights</h5>
                </div>
                <div class="card-body">
                    <p>Cluster results and representative curves would go here.</p>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="outlier" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Outliers</h5>
                </div>
                <div class="card-body">
                    <p>Outliers and detailed insights would go here.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('category-select').addEventListener('change', (event) => {
        const selectedCategory = event.target.value;
        document.getElementById('selected-category').textContent = selectedCategory;
        // Update chart and other components based on selected category
    });
</script>