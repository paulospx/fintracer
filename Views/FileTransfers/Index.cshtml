@model IEnumerable<FinTracer.Models.FileTransfer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Transfers</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Source
            </th>
            </th>
            <th>
                Target
            </th>
            <th>
                Status
            </th>
            <th>
                Scheduled
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SourceFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetFile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduledToCopy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransferId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransferId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransferId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<button class="btn btn-dark">Check Source</button>
<button class="btn btn-dark">Copy Files</button>
